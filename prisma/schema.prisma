// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum PlantType {
  CACTUS
  FERN
  SANSEVIERIA
  FICUS
  MONSTERA_DELICIOSA
}

model Plant {
  id                         String      @id @default(uuid())
  type                       PlantType   @unique
  gltf_model_url             String
  care_instructions          String
  watering_interval          Int
  max_waterings_per_interval Int
  created_at                 DateTime    @default(now())
  updated_at                 DateTime    @updatedAt
  user_plants                UserPlant[]

  @@map("plants")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id             String      @id @default(uuid())
  email          String      @unique @db.VarChar(120)
  password       String
  name           String?
  role           UserRole    @default(USER)
  user_plants    UserPlant[]
  is_verified    Boolean?
  refresh_token  String?
  email_relation Email       @relation(fields: [email], references: [email])
  created_at     DateTime    @default(now())
  updated_at     DateTime    @updatedAt

  @@map("users")
}

model Email {
  email       String  @id @unique @db.VarChar(120)
  is_verified Boolean @default(false)
  user        User[]

  @@map("verified_emails")
}

model UserPlant {
  id               Int               @id @default(autoincrement())
  user_id          String
  plant_id         String            @unique
  name             String
  last_watered_at  DateTime?
  user             User              @relation(fields: [user_id], references: [id])
  plant            Plant             @relation(fields: [plant_id], references: [id])
  watering_history WateringHistory[]
  created_at       DateTime          @default(now())

  @@unique([user_id, plant_id])
  @@map("user_plants")
}

model WateringHistory {
  id            Int       @id @default(autoincrement())
  user_plant_id Int
  watered_at    DateTime  @default(now())
  user_plant    UserPlant @relation(fields: [user_plant_id], references: [id])

  @@map("watering_history")
}
